# Cibozer Environment Configuration Template
# Copy this file to .env and configure your values

# Flask Settings (REQUIRED)
SECRET_KEY=your-secret-key-at-least-32-chars-long-generate-new-one
FLASK_DEBUG=False
FLASK_ENV=production

# Database (REQUIRED)
DATABASE_URL=sqlite:///instance/cibozer.db
# For PostgreSQL production: postgresql://user:password@host:port/database

# Security
RATE_LIMIT_ENABLED=True
RATE_LIMIT_STORAGE_URL=memory://
SESSION_COOKIE_SECURE=True
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Stripe Payment Processing (Required for paid plans)
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_PRO=price_your_pro_price_id
STRIPE_PRICE_ID_PREMIUM=price_your_premium_price_id

# Admin Panel (Required for admin access)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure-admin-password-change-this

# Email Configuration (Optional but recommended)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=True

# File Storage Paths
UPLOAD_FOLDER=uploads
VIDEO_FOLDER=videos
PDF_FOLDER=pdfs
SAVED_PLANS_FOLDER=saved_plans

# Performance & Monitoring
REQUEST_TIMEOUT=300
VIDEO_GENERATION_TIMEOUT=600
