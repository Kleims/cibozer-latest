# ==============================================
# CIBOZER PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================
#
# Copy this file to .env.production for production deployment
# NEVER commit .env.production to version control!
#
# Generate secret key with: python -c 'import secrets; print(secrets.token_urlsafe(32))'

# ==============================================
# CORE APPLICATION SETTINGS
# ==============================================
FLASK_ENV=production
DEBUG=False
SECRET_KEY=your-super-secure-secret-key-here

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Production PostgreSQL (Railway/Heroku format)
DATABASE_URL=postgresql://username:password@host:port/database

# ==============================================
# EMAIL CONFIGURATION (PRODUCTION)
# ==============================================
# SendGrid (Recommended for production)
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_DEFAULT_SENDER=Cibozer <noreply@yourdomain.com>

# Alternative: Gmail (for development/testing only)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# ==============================================
# STRIPE PAYMENT CONFIGURATION
# ==============================================
# Production keys (get from Stripe Dashboard)
STRIPE_SECRET_KEY=sk_live_your_live_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Price IDs (from Stripe product configuration)
STRIPE_PRICE_ID_PRO=price_your_pro_price_id
STRIPE_PRICE_ID_PREMIUM=price_your_premium_price_id

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=SecureAdminPassword2024!

# ==============================================
# EXTERNAL API KEYS
# ==============================================
# OpenAI (for meal plan generation enhancements)
OPENAI_API_KEY=sk-your-openai-api-key

# ==============================================
# CACHING & PERFORMANCE
# ==============================================
# Redis for production caching (optional)
REDIS_URL=redis://localhost:6379/0

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_TO_STDOUT=True
LOG_LEVEL=INFO

# Sentry for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ==============================================
# DOMAIN & SSL CONFIGURATION
# ==============================================
SERVER_NAME=yourdomain.com
PREFERRED_URL_SCHEME=https

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Session security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# CSRF Protection
WTF_CSRF_TIME_LIMIT=None
WTF_CSRF_SSL_STRICT=True

# ==============================================
# DEPLOYMENT PLATFORM SPECIFIC
# ==============================================
# Railway
RAILWAY_ENVIRONMENT=production

# Render
RENDER_SERVICE_TYPE=web

# Port (usually set by platform)
PORT=5000